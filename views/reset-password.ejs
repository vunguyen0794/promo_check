<%- include('partials/header') %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="section-title">Đặt lại mật khẩu</h2>
        
        <% if (error) { %>
            <div class="alert alert-danger" style="color: red; margin-bottom: 10px; text-align: center;"><%= error %></div>
        <% } %>

        <form action="/reset-password" method="POST" class="auth-form">
            <input type="hidden" name="token" value="<%= token %>">
            
            <div class="form-group">
                <label>Mật khẩu mới</label>
                <input type="password" name="password" required placeholder="Nhập mật khẩu mới" minlength="6">
            </div>
            
            <div class="form-group">
                <label>Nhập lại mật khẩu</label>
                <input type="password" name="confirm_password" required placeholder="Xác nhận mật khẩu">
            </div>

            <button type="submit" class="btn btn-primary btn-full">Đổi mật khẩu</button>
        </form>
    </div>
</div>

<%- include('partials/footer') %>