<%- include('partials/header', {title: title, currentPage: currentPage, time: time}) %>

<div class="container" style="margin-top: 30px; max-width: 800px;">
    
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
        <h2 style="margin: 0; color: #1e293b;">üîî T·∫•t c·∫£ th√¥ng b√°o</h2>
        <button onclick="markAllRead(event)" style="padding: 8px 16px; background: white; border: 1px solid #cbd5e1; border-radius: 6px; cursor: pointer; color: #2563eb; font-weight: 600;">
            ƒê√°nh d·∫•u t·∫•t c·∫£ ƒë√£ ƒë·ªçc
        </button>
    </div>

    <div class="notif-full-list" style="background: white; border-radius: 12px; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1); overflow: hidden;">
        
        <% if (notifications.length === 0) { %>
            <div style="padding: 40px; text-align: center; color: #64748b;">
                Ch∆∞a c√≥ th√¥ng b√°o n√†o.
            </div>
        <% } else { %>
            <% notifications.forEach(n => { %>
                <div class="notif-item-row <%= n.is_read ? 'read' : 'unread' %>" 
                     onclick="openNotifModal(this)"
                     style="cursor: pointer; padding: 16px; border-bottom: 1px solid #f1f5f9; display: flex; gap: 15px; align-items: start; transition: background 0.2s;"
                     data-id="<%= n.id %>" 
                     data-read="<%= n.is_read %>"
                     data-title="<%= n.title %>"
                     data-time="<%= new Date(n.created_at).toLocaleString('vi-VN') %>"
                     data-user="<%= n.user_ref %>"
                     data-type="<%= n.type || 'Th√¥ng b√°o' %>"
                     data-type-class="<%= n.type === 'alert' ? 'alert' : (n.type === 'update' ? 'update' : 'info') %>"
                     data-content="<%= n.content %>">
                    
                    <div style="flex-shrink: 0; margin-top: 4px;">
                        <% if (n.type === 'alert') { %>
                            <span style="display:inline-block; width:10px; height:10px; background:#ef4444; border-radius:50%;"></span>
                        <% } else if (n.type === 'update') { %>
                            <span style="display:inline-block; width:10px; height:10px; background:#22c55e; border-radius:50%;"></span>
                        <% } else { %>
                            <span style="display:inline-block; width:10px; height:10px; background:#3b82f6; border-radius:50%;"></span>
                        <% } %>
                    </div>

                    <div style="flex: 1;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 4px;">
                            <span style="font-size: 15px; color: #0f172a; <%= !n.is_read ? 'font-weight: 700;' : '' %>">
                                <%= n.title %>
                            </span>
                            <span style="font-size: 12px; color: #94a3b8;">
                                <%= new Date(n.created_at).toLocaleDateString('vi-VN') %>
                            </span>
                        </div>
                        <div style="font-size: 14px; color: #475569; line-height: 1.5; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            <%- n.content %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } %>

    </div>

    <% if (totalPages > 1) { %>
        <div style="margin-top: 20px; display: flex; justify-content: center; gap: 10px;">
            <% if (page > 1) { %>
                <a href="/notifications?page=<%= page - 1 %>" style="padding: 8px 12px; background: #e2e8f0; border-radius: 6px; text-decoration: none; color: #333;">&laquo; Tr∆∞·ªõc</a>
            <% } %>
            <span style="padding: 8px 12px;">Trang <%= page %> / <%= totalPages %></span>
            <% if (page < totalPages) { %>
                <a href="/notifications?page=<%= page + 1 %>" style="padding: 8px 12px; background: #e2e8f0; border-radius: 6px; text-decoration: none; color: #333;">Sau &raquo;</a>
            <% } %>
        </div>
    <% } %>

</div>

<style>
    .notif-item-row:hover {
        background-color: #f8fafc;
    }
    .notif-item-row.read {
        opacity: 0.7;
    }
    .notif-item-row.unread {
        background-color: #fff;
    }
</style>

<%- include('partials/footer') %>