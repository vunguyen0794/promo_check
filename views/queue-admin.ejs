                const data = await res.json();
                if(data.ok) window.location.reload();
                else { alert(data.message); btn.innerText = "G·ªåI NGAY"; btn.disabled = false; closeModal(); }
            } catch(e) { alert('L·ªói k·∫øt n·ªëi'); closeModal(); }
        }

