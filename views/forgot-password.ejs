<%- include('partials/header') %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="section-title">Quên mật khẩu</h2>
        
        <% if (error) { %>
            <div class="alert alert-danger" style="color: red; margin-bottom: 10px; text-align: center;"><%= error %></div>
        <% } %>
        <% if (success) { %>
            <div class="alert alert-success" style="color: green; margin-bottom: 10px; text-align: center;"><%= success %></div>
        <% } %>

        <form action="/forgot-password" method="POST" class="auth-form">
            <div class="form-group">
                <label>Nhập email đăng ký</label>
                <input type="email" name="email" required placeholder="vidu@phongvu.vn" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary btn-full">Gửi link khôi phục</button>
        </form>
        
        <div class="auth-links">
            <a href="/login">Quay lại đăng nhập</a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>