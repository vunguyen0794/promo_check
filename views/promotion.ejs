<script>
(()=> {
  // HTML b·∫Øt bu·ªôc ph·∫£i c√≥:
  // <form class="search-form" action="/search-promotion" ...>
  //   <div class="autocomplete-container">
  //     <input id="sku" ...>
  //     <div id="skuAutocomplete" class="autocomplete-results"></div>
  //   </div>
  // </form>
  const box  = document.getElementById('sku');
  const dd   = document.getElementById('skuAutocomplete');
  const form = document.querySelector('form.search-form') || document.querySelector('form[action="/search-promotion"]');
  if (!box || !dd || !form) { console.warn('Thi·∫øu #sku / #skuAutocomplete / form'); return; }

  let tId;
  const fmtVND = n => new Intl.NumberFormat('vi-VN').format(Number(n||0)) + ' VNƒê';

  box.addEventListener('input', () => {
    clearTimeout(tId);
    const v = box.value.trim();
    if (!v){ dd.style.display='none'; return; }

    tId = setTimeout(async () => {
      try {
        const res = await fetch(`/api/skus?q=${encodeURIComponent(v)}`);
        const data = await res.json();       // m·∫£ng [{sku, product_name, list_price,...}]
        dd.innerHTML = '';
        let exact = false;

        (data || []).forEach(it => {
          const el = document.createElement('div');
          el.className = 'autocomplete-item';
          el.innerHTML = `
            <div><strong>${it.sku}</strong> ‚Äî ${it.product_name||''}</div>
            <div style="font-size:12px;color:#666">${it.brand||''} | ${it.category||''} | ${it.subcat||''}</div>
            <div style="font-size:12px;color:#e53935;font-weight:bold">${it.list_price!=null?fmtVND(it.list_price):'N/A'}</div>`;
          el.onclick = () => { box.value = it.sku; dd.style.display='none'; form.submit(); };
          dd.appendChild(el);
          if (String(it.sku) === v) exact = true;
        });

        // ‚ûï Th√™m SKU m·ªõi n·∫øu kh√¥ng kh·ªõp exact
        if (!exact && v) {
          const add = document.createElement('div');
          add.className = 'autocomplete-item add-new';
          add.textContent = `‚ûï Th√™m SKU m·ªõi: ${v}`;
          add.onclick = async () => {
            dd.style.display='none';
            const name = prompt('T√™n s·∫£n ph·∫©m cho SKU '+v+':','');
            if (name === null) return;
            const priceRaw = prompt('Gi√° ni√™m y·∫øt (VNƒê):','');
            if (priceRaw === null) return;
            const price = Number(String(priceRaw).replace(/\D/g,'')) || 0;

            const r = await fetch('/api/skus/upsert', {
              method:'POST', headers:{'Content-Type':'application/json'},
              body: JSON.stringify({ sku:v, product_name:name||v, list_price:price })
            });
            const js = await r.json();
            if (!js.ok){ alert('L·ªói th√™m SKU: '+(js.error||'unknown')); return; }
            form.submit(); // t√¨m ngay SKU v·ª´a th√™m
          };
          dd.appendChild(add);
        }

        dd.style.display = dd.children.length ? 'block' : 'none';
      } catch (err) {
        console.error('Autocomplete error:', err);
        dd.style.display = 'none';
      }
    }, 250);
  });

  document.addEventListener('click', (e) => {
    if (!e.target.closest('.autocomplete-container')) dd.style.display = 'none';
  });
})();
</script>


        
