    <input type="text" id="keyword" class="f-input" placeholder="Nh·∫≠p t·ª´ kh√≥a..." onkeydown="if(event.key==='Enter') loadData()">
</div>
            <button onclick="loadData()" class="btn-view">üîç Xem ngay</button>
            <button onclick="downloadExcel()" class="btn-view btn-excel">üì• Xu·∫•t Excel</button>
        </div>

        <div class="stats-grid">
            <div class="stat-card c-repair"><h3>üõ† S·ª≠a ch·ªØa</h3><div class="val" id="val-repair">0</div></div>
            <div class="stat-card c-warranty"><h3>üõ° B·∫£o h√†nh</h3><div class="val" id="val-warranty">0</div></div>
            <div class="stat-card c-sales"><h3>üì¶ L·∫Øp r√°p v√† c√†i ƒë·∫∑t</h3><div class="val" id="val-sales">0</div></div>
            <div class="stat-card c-total"><h3>T·ªïng l∆∞·ª£t</h3><div class="val" id="val-total">0</div></div>
        </div>

        <div class="chart-section">
            <div class="chart-box">
                <div class="chart-title">üìà Xu h∆∞·ªõng ph·ª•c v·ª•</div>
                <canvas id="lineChart" height="150"></canvas>
            </div>
            <div class="chart-box">
                <div class="chart-title">üç∞ T·ª∑ l·ªá D·ªãch v·ª•</div>
                <canvas id="pieChart" height="200"></canvas>
            </div>
        </div>

        <div class="table-container">
            <div class="chart-title">üèÜ B·∫£ng ƒë√°nh gi√° ch·∫•t l∆∞·ª£ng K·ªπ thu·∫≠t vi√™n</div>
            <table>
                <thead>
                    <tr>
                        <th style="width: 50px;">#</th>
                        <th>T√™n KTV / Qu·∫ßy</th>
                        
                        <% if (user.branch_code === 'HCM.BD') { %>
                            <th style="text-align: center; color:#1a73e8;">Chi Nh√°nh</th>
                        <% } %>

                        <th style="text-align: center;">S·ªë l∆∞·ª£t ƒë√°nh gi√°</th>
                        <th style="text-align: center;">ƒêi·ªÉm KTV (TB)</th>
                        <th style="text-align: center;">ƒêi·ªÉm D·ªãch v·ª• (TB)</th>
                        <th>G√≥p √Ω g·∫ßn nh·∫•t</th>
                    </tr>
