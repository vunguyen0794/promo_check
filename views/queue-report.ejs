    <script>
        Chart.register(ChartDataLabels);

        // Set ng√†y m·∫∑c ƒë·ªãnh
        const today = new Date();
        document.getElementById('dTo').valueAsDate = today;
        document.getElementById('dFrom').valueAsDate = new Date(today.getFullYear(), today.getMonth(), 1);

        let myLineChart = null;
        let myPieChart = null;
        let myBarChart = null;
        
        const userBranch = "<%= user.branch_code %>";
        let globalLeaderboard = [];
        let lbPage = 1;
        const lbLimit = 5;

        // --- LOAD DATA ---
        async function loadData() {
            const dFrom = document.getElementById('dFrom').value;
            const dTo = document.getElementById('dTo').value;
            let branch = document.getElementById('branchSelect')?.value || 'ALL';
            const keyword = document.getElementById('keyword').value;
            
            const btn = document.querySelector('.btn-view');
            btn.innerText = "‚è≥..."; btn.disabled = true;

            try {
                const res = await fetch(`/api/queue/report-data?startDate=${dFrom}&endDate=${dTo}&branchFilter=${branch}&keyword=${encodeURIComponent(keyword)}`);
                const data = await res.json();
                
                if(data.ok) {
                    // [S·ª¨A L·ªñI QUAN TR·ªåNG] Truy·ªÅn prevStats v√†o h√†m
                    renderStats(data.stats, data.prevStats); 
                    
                    renderCharts(data.dailyStats, data.stats, data.branchStats);
                    globalLeaderboard = data.leaderboard;
                    lbPage = 1;
                    renderLeaderboard();
                    renderDetails(data.details);
                } else alert(data.message);
            } catch(e) { alert("L·ªói k·∫øt n·ªëi: " + e.message); }
            finally { btn.innerText = "üîç Xem ngay"; btn.disabled = false; }
        }

        // --- RENDER STATS & TREND ---
        function renderStats(stats, prevStats) {
            // Helper t√≠nh % - ƒê·ªãnh nghƒ©a B√äN TRONG h√†m
            const renderTrend = (curr, prev, elemId) => {
                const el = document.getElementById(elemId);
                if (!prev || prev === 0) {
                    el.innerHTML = `<span class="trend-badge t-flat">-- (K·ª≥ tr∆∞·ªõc: 0)</span>`;
                    return;
                }
                const diff = curr - prev;
                const pct = ((diff / prev) * 100).toFixed(1);
                
                if (diff > 0) el.innerHTML = `<span class="trend-badge t-up">‚ñ≤ ${pct}% (${prev})</span>`;
                else if (diff < 0) el.innerHTML = `<span class="trend-badge t-down">‚ñº ${pct}% (${prev})</span>`;
                else el.innerHTML = `<span class="trend-badge t-flat">‚ñ¨ 0%</span>`;
            };

            document.getElementById('val-repair').innerText = stats.REPAIR;
            document.getElementById('val-warranty').innerText = stats.WARRANTY;
            document.getElementById('val-sales').innerText = stats.SALES;
            document.getElementById('val-total').innerText = stats.TOTAL;

            // [FIX L·ªñI] G·ªçi renderTrend B√äN TRONG h√†m n√†y (n∆°i prevStats t·ªìn t·∫°i)
            if (prevStats) {
                renderTrend(stats.REPAIR, prevStats.REPAIR, 'trend-repair');
                renderTrend(stats.WARRANTY, prevStats.WARRANTY, 'trend-warranty');
                renderTrend(stats.SALES, prevStats.SALES, 'trend-sales');
                renderTrend(stats.TOTAL, prevStats.TOTAL, 'trend-total');
            }
        }

        // --- RENDER CHARTS ---
        function renderCharts(dailyStats, totalStats, branchStats) {
            const labels = Object.keys(dailyStats).sort();
            const dR = labels.map(d => dailyStats[d].REPAIR || 0);
            const dW = labels.map(d => dailyStats[d].WARRANTY || 0);
            const dS = labels.map(d => dailyStats[d].SALES || 0);

            if(myLineChart) myLineChart.destroy();
            if(myPieChart) myPieChart.destroy();
            if(myBarChart) myBarChart.destroy();

            const ctxLine = document.getElementById('lineChart').getContext('2d');
            myLineChart = new Chart(ctxLine, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        { label: 'S·ª≠a ch·ªØa', data: dR, borderColor: '#1a73e8', tension: 0.3 },
                        { label: 'B·∫£o h√†nh', data: dW, borderColor: '#f59e0b', tension: 0.3 },
                        { label: 'L·∫Øp r√°p', data: dS, borderColor: '#0d9488', tension: 0.3 }
                    ]
                }, 
                options: { responsive: true, plugins: { datalabels: { display: false } } }
            });

            const barCanvas = document.getElementById('barChart');
            if (barCanvas) { 
                const branchLabels = Object.keys(branchStats || {}).sort();
                const bR = branchLabels.map(b => branchStats[b].REPAIR || 0);
                const bW = branchLabels.map(b => branchStats[b].WARRANTY || 0);
                const bS = branchLabels.map(b => branchStats[b].SALES || 0);

                const ctxBar = barCanvas.getContext('2d');
                myBarChart = new Chart(ctxBar, {
                    type: 'bar',
                    data: {
                        labels: branchLabels,
                        datasets: [
                            { label: 'S·ª≠a ch·ªØa', data: bR, backgroundColor: '#1a73e8' },
                            { label: 'B·∫£o h√†nh', data: bW, backgroundColor: '#f59e0b' },
                            { label: 'L·∫Øp r√°p', data: bS, backgroundColor: '#0d9488' }
                        ]
                    },
                    plugins: [{
                        id: 'totalLabel',
                        afterDatasetsDraw: (chart) => {
                            const { ctx, scales: { x, y } } = chart;
                            chart.data.labels.forEach((label, index) => {
                                const total = chart.data.datasets.reduce((sum, ds) => sum + (Number(ds.data[index]) || 0), 0);
                                if (total > 0) {
                                    const xPos = x.getPixelForValue(index);
                                    const yPos = y.getPixelForValue(total);
                                    ctx.save();
                                    ctx.font = 'bold 12px "Be Vietnam Pro", sans-serif';
                                    ctx.fillStyle = '#333';
                                    ctx.textAlign = 'center';
                                    ctx.textBaseline = 'bottom';
                                    ctx.fillText(total, xPos, yPos - 5);
                                    ctx.restore();
                                }
                            });
                        }
                    }],
                    options: {
                        responsive: true,
                        scales: { x: { stacked: true }, y: { stacked: true, suggestedMax: (ctx) => {
                            const max = Math.max(...branchLabels.map((_, i) => bR[i]+bW[i]+bS[i])); return max * 1.1;
                        }}},
                        plugins: { datalabels: { color: 'white', display: ctx => ctx.dataset.data[ctx.dataIndex] > 0 } }
                    }
                });
            }

            const ctxPie = document.getElementById('pieChart').getContext('2d');
            myPieChart = new Chart(ctxPie, {
                type: 'doughnut',
                data: {
                    labels: ['S·ª≠a ch·ªØa', 'B·∫£o h√†nh', 'L·∫Øp r√°p'],
                    datasets: [{ data: [totalStats.REPAIR, totalStats.WARRANTY, totalStats.SALES], backgroundColor: ['#1a73e8', '#f59e0b', '#0d9488'] }]
                }, 
                options: { 
                    responsive: true,
                    plugins: {
                        datalabels: { color: '#fff', font: { weight: 'bold' }, formatter: (value, ctx) => {
                            if (value === 0) return '';
                            let sum = 0; ctx.chart.data.datasets[0].data.map(d => sum += d);
                            return (value * 100 / sum).toFixed(1) + "%";
                        }}
                    }
                }
            });
        }

        // --- RENDER LEADERBOARD ---
        function renderLeaderboard() {
            const list = globalLeaderboard;
            const tbody = document.getElementById('leaderboard-body');
            const pagDiv = document.getElementById('leaderboard-pagination');

            if(list.length === 0) {
                tbody.innerHTML = '<tr><td colspan="7" style="text-align:center; padding:20px; color:#999;">Ch∆∞a c√≥ d·ªØ li·ªáu</td></tr>';
                pagDiv.innerHTML = '';
                return;
            }
            const totalPages = Math.ceil(list.length / lbLimit);
            if (lbPage > totalPages) lbPage = totalPages;
            const start = (lbPage - 1) * lbLimit;
            const end = start + lbLimit;
            
            tbody.innerHTML = list.slice(start, end).map((item, index) => {
                const realIndex = start + index;
                let rankClass = '';
                if(realIndex === 0) rankClass = 'rank-1'; else if(realIndex === 1) rankClass = 'rank-2'; else if(realIndex === 2) rankClass = 'rank-3';
                const getScoreClass = (score) => { if(score >= 9) return 's-high'; if(score >= 7) return 's-med'; return 's-low'; };
                
                let branchHtml = userBranch === 'HCM.BD' ? `<td style="text-align:center; color:#1a73e8; font-weight:600;">${item.branch || '--'}</td>` : '';

                return `<tr>
                    <td><div class="ktv-rank ${rankClass}">${realIndex + 1}</div></td>
                    <td style="font-weight:600; color:#333;">${item.name}</td>
                    ${branchHtml}
                    <td style="text-align:center;">${item.count}</td>
                    <td style="text-align:center;"><span class="score-badge ${getScoreClass(item.avgTech)}">${item.avgTech}</span></td>
                    <td style="text-align:center;"><span class="score-badge ${getScoreClass(item.avgService)}">${item.avgService}</span></td>
                    <td style="font-style:italic; color:#666; font-size:13px; max-width:200px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap;">${item.latestComment ? '"'+item.latestComment+'"' : '--'}</td>
                </tr>`;
            }).join('');

            let pagHtml = `<span class="pag-info">Trang ${lbPage}/${totalPages}</span>`;
            if (lbPage > 1) pagHtml = `<button class="pag-btn" onclick="changeLbPage(-1)">‚óÄ Tr∆∞·ªõc</button>` + pagHtml;
            else pagHtml = `<div style="width:70px;"></div>` + pagHtml;
            if (lbPage < totalPages) pagHtml += `<button class="pag-btn" onclick="changeLbPage(1)">Sau ‚ñ∂</button>`;
            else pagHtml += `<div style="width:70px;"></div>`;
            pagDiv.innerHTML = pagHtml;
        }

        function changeLbPage(dir) { lbPage += dir; renderLeaderboard(); }

        // --- RENDER DETAILS (Gi·ªØ nguy√™n logic c·ªßa b·∫°n) ---
        function renderDetails(list) {
            const tbody = document.getElementById('details-body');
            document.getElementById('detail-count').innerText = list ? list.length : 0;
            if (!list || list.length === 0) {
                tbody.innerHTML = '<tr><td colspan="10" style="text-align:center; padding:20px;">Kh√¥ng c√≥ d·ªØ li·ªáu</td></tr>';
                return;
            }
            tbody.innerHTML = list.map((t, i) => {
                const d = new Date(t.created_at);
                const timeStr = d.toLocaleTimeString('vi-VN', {hour:'2-digit', minute:'2-digit'}) + ' ' + d.toLocaleDateString('vi-VN');
                
                let statusBadge = `<span style="padding:2px 6px; border-radius:4px; font-size:11px; background:#eee;">${t.status}</span>`;
                if(t.status === 'COMPLETED') statusBadge = `<span style="background:#dcfce7; color:#166534; padding:2px 6px; border-radius:4px; font-size:11px; font-weight:bold;">HO√ÄN TH√ÄNH</span>`;
                if(t.status === 'SKIPPED') statusBadge = `<span style="background:#fee2e2; color:#991b1b; padding:2px 6px; border-radius:4px; font-size:11px; font-weight:bold;">ƒê√É H·ª¶Y</span>`;
                if(t.status === 'SERVING') statusBadge = `<span style="background:#dbeafe; color:#1e40af; padding:2px 6px; border-radius:4px; font-size:11px; font-weight:bold;">ƒêANG PV</span>`;

                let feedback = '--';
                if (t.service_feedback && t.service_feedback.length > 0) {
                    const fb = t.service_feedback[0];
                    feedback = `<div style="color:#f59e0b; font-weight:bold;">${fb.service_score} ‚≠ê</div>`;
                    if(fb.comment) feedback += `<div style="font-size:11px; color:#666; font-style:italic;">"${fb.comment}"</div>`;
                }
                
                // [Logic c·ªßa b·∫°n] Ki·ªÉm tra SƒêT ho·∫∑c M√£ ƒë∆°n h√†ng Sales
                const contactInfo = t.service_type === 'SALES' 
                    ? (t.order_id ? `<span style="font-weight:bold; color:#dc3545;">${t.order_id}</span>` : '<span style="color:#999;">(Ch∆∞a c√≥ m√£ ƒë∆°n)</span>')
                    : (t.customer_phone || '---');

                return `<tr>
                    <td>${i + 1}</td>
