            </div>
            <div class="f-group">
                <label class="f-label">ƒê·∫øn ng√†y</label>
                <input type="date" id="dTo" class="f-input">
            </div>

            <% if (user.branch_code === 'HCM.BD') { %>
                <div class="f-group">
                    <label class="f-label">Chi nh√°nh</label>
                    <select id="branchSelect" class="f-input" style="font-weight:bold; color:#d93025;">
                        <option value="ALL">-- T·∫•t c·∫£ h·ªá th·ªëng --</option>
                        <% if(branchList && branchList.length > 0) { %>
                            <% branchList.forEach(function(b) { %>
