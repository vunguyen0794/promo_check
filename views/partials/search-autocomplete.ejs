    top: 110%;
    left: 0;
    right: 0;
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 12px;
    box-shadow: 0 15px 30px -5px rgba(0, 0, 0, 0.15);
    z-index: 1000;
    max-height: 500px;
    overflow-y: auto;
    display: none; /* M·∫∑c ƒë·ªãnh ·∫©n */
}

.autocomplete-item {
    padding: 12px 20px;
    border-bottom: 1px solid #f1f5f9;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: background 0.1s;
}

.autocomplete-item:last-child { border-bottom: none; }
.autocomplete-item:hover, .autocomplete-item.active { background-color: #eff6ff; }

.ac-left { flex: 1; margin-right: 15px; }
.ac-right { text-align: right; white-space: nowrap; }

.ac-sku { 
    font-size: 11px; font-weight: 700; color: #64748b; 
    background: #f1f5f9; padding: 2px 6px; border-radius: 4px; 
    display: inline-block; margin-bottom: 4px;
}
.ac-name { font-size: 14px; color: #1e293b; line-height: 1.4; display: block; }
.ac-meta { font-size: 12px; color: #94a3b8; margin-top: 2px; font-style: italic;}

.ac-price { font-weight: 700; color: #dc2626; font-size: 14px; }
.ac-noprice { font-weight: 500; color: #94a3b8; font-size: 12px; }

/* Highlight text */
.hl-text { background-color: #fef08a; color: #854d0e; font-weight: 600; padding: 0 2px; border-radius: 2px; }
/* Class d√πng ƒë·ªÉ t√¥ ƒë·∫≠m t·ª´ kh√≥a t√¨m ki·∫øm */
.hl-match {
    background-color: #fef08a; /* M√†u v√†ng nh·∫°t */
    color: #854d0e; 
    font-weight: 700;
    border-radius: 2px;
}

</style>

<div class="search-wrapper">
  <form id="searchForm" action="/search-promotion" method="GET">
    <div style="position: relative;">
      <input id="skuSearch" name="query" class="custom-search-input" 
             placeholder="üîç Nh·∫≠p SKU, T√™n s·∫£n ph·∫©m, ho·∫∑c t·ª´ kh√≥a..." autocomplete="off">
      
      <button type="submit" class="search-icon-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </button>
    </div>
    <div id="autocompleteResults"></div>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const searchInput = document.getElementById('skuSearch');
    const resultsContainer = document.getElementById('autocompleteResults');
    const searchForm = document.getElementById('searchForm');
    let timeoutId;

    // H√†m format ti·ªÅn t·ªá
    function fmtVND(n) { 
        if (n == null || n === '' || n === 0) return '<span style="color:#999; font-size:12px;">Li√™n h·ªá</span>';
        return new Intl.NumberFormat('vi-VN').format(Number(n)) + ' ƒë'; 
    }

    // H√†m highlight th√¥ng minh (T√¥ ƒë·∫≠m t·ª´ kh√≥a)
    function smartHighlight(text, query) {
        if (!text) return '';
        if (!query) return text;
        
        // T√°ch t·ª´ kh√≥a, s·∫Øp x·∫øp t·ª´ d√†i ƒë·∫øn ng·∫Øn ƒë·ªÉ ∆∞u ti√™n kh·ªõp t·ª´ d√†i tr∆∞·ªõc
        const terms = query.trim().split(/\s+/).filter(t => t.length > 0)
            .map(t => t.replace(/[.*+?^${}()|[\]\\]/g, '\\$&')) // Escape k√Ω t·ª± ƒë·∫∑c bi·ªát
            .sort((a, b) => b.length - a.length);

        if (terms.length === 0) return text;

        // T·∫°o Regex g·ªôp
        const regex = new RegExp(`(${terms.join('|')})`, 'gi');
        
        // Thay th·∫ø b·∫±ng class CSS hl-match
        return text.replace(regex, '<span class="hl-match">$1</span>');
    }

    searchInput.addEventListener('input', function (e) {
      clearTimeout(timeoutId);
      const value = e.target.value.trim();

      if (!value) { 
          resultsContainer.style.display = 'none'; 
          return; 
      }

      timeoutId = setTimeout(async () => {
        try {
          // Hi·ªÉn th·ªã tr·∫°ng th√°i ƒëang t√¨m
          resultsContainer.style.display = 'block';
          resultsContainer.innerHTML = '<div style="padding:10px; text-align:center; color:#666;">‚è≥ ƒêang t√¨m ki·∫øm...</div>';

          const response = await fetch(`/api/skus?q=${encodeURIComponent(value)}`);
          const data = await response.json();
          
          resultsContainer.innerHTML = '';
          
          if(data.length === 0) {
             resultsContainer.innerHTML = `<div style="padding:10px; text-align:center;">Kh√¥ng t√¨m th·∫•y s·∫£n ph·∫©m n√†o kh·ªõp v·ªõi "<b>${value}</b>"</div>`;
          }

          let exactMatchFound = false;

          // Render danh s√°ch k·∫øt qu·∫£
          data.forEach(item => {
            if (String(item.sku).toLowerCase() === value.toLowerCase()) exactMatchFound = true;

            const div = document.createElement('div');
            div.className = 'autocomplete-item';
            // CSS inline cho item
            div.style.cssText = "padding: 10px; border-bottom: 1px solid #f1f5f9; cursor: pointer; display: flex; justify-content: space-between; align-items: center; transition: background 0.1s;";
            
            // Hi·ªáu ·ª©ng hover
            div.onmouseover = () => { div.style.backgroundColor = '#f8fafc'; };
            div.onmouseout = () => { div.style.backgroundColor = 'white'; };

            // Highlight t√™n v√† SKU
            const hlName = smartHighlight(item.product_name, value);
            const hlSku = smartHighlight(item.sku, value);

            div.innerHTML = `
            <div style="flex: 1; margin-right: 10px;">
                <div style="font-size: 14px; color: #333; margin-bottom: 4px; line-height: 1.4;">
                    <strong style="color:#2563eb; font-size:12px; background:#eff6ff; padding:2px 6px; border-radius:4px; margin-right: 5px; border: 1px solid #dbeafe;">${hlSku}</strong> 
                    ${hlName}
                </div>
                <div style="font-size:11px; color:#64748b;">
                    ${item.brand || 'NoBrand'} | ${item.category || ''} | ${item.subcat || ''}
                </div>
            </div>
            <div style="text-align: right; min-width: 90px;">
                <div style="font-size:13px; color:#dc2626; font-weight:700;">
                    ${fmtVND(item.list_price)}
                </div>
            </div>
          `;
            
            div.addEventListener('click', function () {
              searchInput.value = item.sku; 
              resultsContainer.style.display = 'none';
              window.location.href = `/search-promotion?sku=${encodeURIComponent(item.sku)}`;
            });
            
            resultsContainer.appendChild(div);
          });

          // --- N√öT TH√äM M·ªöI (ƒê√£ kh√¥i ph·ª•c logic) ---
          if (!exactMatchFound && value.length > 0) {
             const addDiv = document.createElement('div');
             addDiv.className = 'autocomplete-item';
             addDiv.style.cssText = "padding: 12px; border-top: 2px dashed #e2e8f0; cursor: pointer; color: #059669; font-weight: 600; text-align: center; background: #f0fdf4; margin-top: 5px;";
             addDiv.innerHTML = `<span>‚ûï T·∫°o m·ªõi SKU: "<b>${value}</b>"</span>`;
             
             addDiv.onclick = async () => {
                  resultsContainer.style.display = 'none';
                  
                  // Quy tr√¨nh nh·∫≠p th√¥ng tin (Gi·ªØ nguy√™n logic c≈© c·ªßa b·∫°n)
                  const name = prompt('T√™n s·∫£n ph·∫©m cho SKU ' + value + ':', '');
                  if (name === null) return;
                  
                  const brand = prompt('Brand ' + value + ':', '');
                  if (brand === null) return;
                  
                  const category = prompt('Category ' + value + ':', '');
                  if (category === null) return;
                  
                  const subcat = prompt('Subcat ' + value + ':', '');
                  if (subcat === null) return;
                  
                  const priceRaw = prompt('Gi√° ni√™m y·∫øt (VNƒê):', '');
                  if (priceRaw === null) return;
                  
                  const price = Number(String(priceRaw).replace(/\D/g, '')) || 0;

                  try {
                      // G·ªçi API t·∫°o m·ªõi
                      const res = await fetch('/api/skus/upsert', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            sku: value, 
                            product_name: name || value, 
                            list_price: price,
                            brand: brand || null,
                            category: category || null,
                            subcat: subcat || null
                        })
                      });
                      
                      const js = await res.json();
                      if (js.ok) {
                          // Th√†nh c√¥ng -> Chuy·ªÉn h∆∞·ªõng sang trang chi ti·∫øt
                          window.location.href = `/search-promotion?sku=${encodeURIComponent(value)}`;
                      } else {
                          alert('L·ªói th√™m SKU: ' + (js.error || 'unknown'));
                      }
                  } catch(e) { 
                      alert('L·ªói k·∫øt n·ªëi ƒë·∫øn server.');
                      console.error(e);
                  }
             };
             resultsContainer.appendChild(addDiv);
          }

        } catch (err) {
          console.error('L·ªói t√¨m ki·∫øm:', err);
          resultsContainer.style.display = 'none';
        }
      }, 300); // Debounce 300ms
    });

    // ·∫®n khi click ra ngo√†i
    document.addEventListener('click', function (e) {
      if (!e.target.closest('.search-wrapper')) resultsContainer.style.display = 'none';
    });
    
    // X·ª≠ l√Ω ph√≠m Enter
    searchInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') { e.preventDefault(); searchForm.submit(); }
    });
  });
</script>